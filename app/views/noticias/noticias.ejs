<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Noticias</title>
		</head>
	<body>

		<h1>Noticias</h1>

		<!-- Aula 26 -->
		<!-- route\noticias.js chama esta view depois de consultar o banco-->
		<!-- Passa um array de noticias -->
		<table>

			<tr>
				<td> ID </td> 
				<td> Titulo </td>
				<td> Noticia </td>
			</tr>

			<% for(var i=0; i < noticias.length ; i++ ){ %>
			<tr>
				<td> <%= noticias[i].id_noticia %> </td> 
				<td> <%= noticias[i].titulo %> </td>
				<td> <%= noticias[i].noticia %> </td>
			</tr>
			<%} %>

		</table>

	</body>
</html>