<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulario de cadastro de Notícia</title>
		</head>
	<body>

		<h1>Adicionar notícia</h1>

		<!-- Aula 46 Mostrando erros-->
		<% if(validacao) { %>
			<ul>
				<% for(var i = 0; i < validacao.length; i++) { %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>					
			</ul>
		<% } %>			
		
		<!-- Aula 36 -->
		<form action="/noticias/salvar" method="post">
			
			<label for="">Título</label>
			<input type="text" id="titulo" name="titulo" placeholder="titulo da noticia">
			<br>
			
			<!-- Aula 45-->
			<label for="">Resumo</label>
			<input type="text" id="resumo" name="resumo" placeholder="Resumo da noticia">
			<br>
			
			<label for="">Nome do Autor</label>
			<input type="text" id="autor" name="autor" placeholder="Nome do autor">
			<br>
			
			<label for="">Data dos Fatos</label>
			<input type="date" id="data_noticia" name="data_noticia" placeholder="Data da noticia">
			<br>
												
			<label for="">Noticia</label>
			<textarea id="noticia" name="noticia" rows="5" cols="30"></textarea>
			<br>
			
			<input type="submit" value="Enviar">
		</form>

	</body>
</html>